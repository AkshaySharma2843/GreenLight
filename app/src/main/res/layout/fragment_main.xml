<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFC107"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_start_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_tap_to_begin_the_fun"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_play_circle_filled"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_fun"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_start_fun"
        app:layout_constraintTop_toBottomOf="@id/tv_start_fun" />

</androidx.constraintlayout.widget.ConstraintLayout>